


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/LinearLayoutDialog"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:gravity="center">

        <TextView
                android:id="@+id/txtDIA_Prmt"
                android:background="@drawable/sh_TXT_bak"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerInParent="true"
                android:textSize="@dimen/abc_action_button_min_width_overflow_material"
                android:textColor="@android:color/holo_blue_bright"/>

        <EditText
            android:id="@+id/txtDIA_Resp"
            android:background="@drawable/sh_TXT_bak"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="-"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_centerInParent="true"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material"
            android:textColor="@android:color/holo_blue_bright"/>
        
        <Button
            android:id="@+id/btnDIA_Done"
            android:clickable="true"
            android:text="\u2713 OK..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>